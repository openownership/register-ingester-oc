#!/usr/bin/env bash
set -Eeuo pipefail

libs=(register-common register-sources-oc)

echo -e "\n=== CONFIGURE DEV LIBS\n"

bundle config disable_local_branch_check true

for lib in "${libs[@]}"; do
    gem=${lib//-/_}
    path=../lib/$lib
    if [ -d "$path" ]; then
        echo "    $gem => $path"
        bundle config "local.$gem" "$path"
    fi
done
