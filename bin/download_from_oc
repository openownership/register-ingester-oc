#!/usr/bin/env ruby

require 'register_ingester_oc/services/download_service'

oc_month = ARGV[0] # '2022_05'
dst_folder = ARGV[1] # '/tmp/companies_file'

dst_path = File.join(dst_folder, "#{oc_month}_companies.csv.gz")

download_service = RegisterIngesterOc::Services::DownloadService.new

print "DOWNLOADING #{Time.now} to #{dst_path}\n"
download_service.download(oc_month, dst_path)

print "DOWNLOADED #{Time.now} to #{dst_path}\n"
